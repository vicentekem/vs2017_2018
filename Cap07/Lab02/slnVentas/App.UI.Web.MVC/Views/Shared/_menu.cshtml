@using App.UI.Web.MVC.Common
@if (SecurityHelpers.IsLogged())
{
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="/Content/themes/main/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p>@SecurityHelpers.GetUserFullName()</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>
            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search..." />
                    <span class="input-group-btn">
                        <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">Menú principal</li>
                @if (SecurityHelpers.IsAdmin())
                {
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Mantenimientos</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Index", "Categoria", new { Area=""})"><i class="fa fa-circle-o"></i> Categorías</a></li>
                            <li><a href="@Url.Action("Index2", "Producto",new { Area=""})"><i class="fa fa-circle-o"></i> Productos</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Seguridad</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active"><a href="@Url.Action("Index", "Home",new { Area="AdminSeguridad"})"><i class="fa fa-circle-o"></i> Usuarios</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Ventas</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="active">
                                <a href="@Url.Action("Index", "Venta",new { Area=""})">
                                    <i class="fa fa-circle-o"></i>Registrar Ventas
                                </a>
                            </li>
                        </ul>
                    </li>


                }

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
}
else
{
    <li class="active treeview">
        <a href="#">
            <i class="fa fa-dashboard"></i> <span>Otras opciones</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
            <li class="active"><a href="@Url.Action("Index", "Comentario",new { Area=""})"><i class="fa fa-circle-o"></i> Comentarios</a></li>
        </ul>
    </li>
}