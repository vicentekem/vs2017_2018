
@{
    ViewBag.Title = "Index";
}

<div id="registrarVenta" class="box box-warning">
    <div class="box-header">
        <h3 class="box-title">Realizar Venta</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <form action="/" method="post">
            <div class="form-group">
                <label>Cliente</label>
                <!-- Lista cliente-->
            </div>

            <div class="form-group row">
                <div class="col-lg-10">
                    <label>Producto</label>
                    <input type="text" readonly class="form-control nombre-producto" />
                </div>
                <div class="col-lg-2">
                    <div style="margin-top:1.6em"></div>
                    <button type="button" class="btn btn-info btn-buscar-producto">Buscar</button>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-5">
                    <label>Precio</label>
                    <input type="text" readonly class="form-control precio-producto" />
                </div>
            </div>

            <div class="form-group">
                <label>Cantidad</label>
                <input type="text" class="form-control cantidad-producto" />
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-success agregar">Agregar</button>
            </div>
        </form>

        <div id="contenidoDetalle">
            <!-- Mostrar un listado de lo que se va comprando -->

        </div>
    </div><!-- /.box-body -->

    <div class="box-header">
        <button type="button" class="btn btn-success guardar">Registrar Venta</button>
    </div>

</div>

@Modal.CreateModal("Busqueda de Productos", "BusquedaDeProductosPopudID")

@section scriptsAdicionales{

    <script src="~/Scripts/mustache.min.js"></script>

    <script id="RegistrarVentaDetalle" type="x-tmpl-mustache">
        <table class="table">
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>

            {{#detalle}}
            <tr>
                <td>{{Nombre}}</td>
                <td>{{PrecioMenor}}</td>
                <td>{{Cantidad}}</td>
                <td>{{SubTotal}}</td>
            </tr>
            {{/detalle}}

        </table>
    </script>

    <script>
        app.RegistrarVentaView.Init();
    </script>
}
