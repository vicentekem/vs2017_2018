@model IEnumerable<App.Entities.Base.Marca>

@{
    ViewBag.Title = "Listado del Marcas";
}

<h2>Marcas</h2>

@Html.ActionLink("Nueva Marca", "Create", "Marca", new { @class = "btn btn-success" })

<table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href=@Url.Action("Edit",new { @id = item.MarcaID }) class="btn btn-warning btn-sm">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
