@model IEnumerable<App.Entities.Base.UnidadMedida>

@{
    ViewBag.Title = "Listado Unidades de Medida";
}

<h2>Unidades de Medida</h2>

@Html.ActionLink("Nueva Unidad de Medida", "Create", "UnidadMedida", new { @class = "btn btn-success" })


<table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>            
            <td>
                <a href=@Url.Action("Edit",new { @id = item.UnidadMedidaID }) class="btn btn-warning btn-sm">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
