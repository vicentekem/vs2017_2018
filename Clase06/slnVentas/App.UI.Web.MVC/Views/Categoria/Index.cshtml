@model IEnumerable<App.Entities.Base.Categoria>

@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>Lista de Categorias</h2>

@*Sin usar Html helpers*@
@*<a href="/Categoria/Create" class="btn btn-success">Nueva Categoría</a>*@

@*Usando HTML Helpers*@
@Html.ActionLink("Nueva Categoría","Create","Categoria",new { @class = "btn btn-success" })

<table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>    

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href=@Url.Action("Edit",new { @id = item.CategoriaID }) class="btn btn-warning btn-sm" >
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>    
        </tr>
    }

</table>

